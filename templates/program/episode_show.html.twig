{% extends 'base.html.twig' %}


{% block title %}
	{{ program.title }}
{% endblock %}


{% block body %}

	<div class="media">

		<img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

		<div class="media-body">

			<h1 class="mt-0">{{ program.title }}</h1>
			<h3>Saison
				{{season.number}}</h3>
			<h3>Episode
				{{episode.number}}
				:
				{{episode.title}}</h3>
			<h5>{{episode.synopsis}}</h5>
		</div>

	</div>


	<a href="{{ path('program_index') }}">

		Retour Ã  la liste des programmes

	</a>

{% endblock %}
