<table class="table">
	<thead>
		<tr>
			<th style="width: 50px">Id</th>
			<th style="width: 150px">Title</th>
			<th style="width: 200px">Synopsis</th>
			<th style="width: 200px">Poster</th>
			<th style="width: 50px">Country</th>
