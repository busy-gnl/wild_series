{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}

	<div class="media">

		<img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

		<div class="media-body">

			<h1 class="mt-0">{{ program.title }}</h1>

			<p>{{ program.synopsis }}</p>

			<p>Pays:
				{{program.country}}</p>

			<p>Catégorie :
				{{ program.category.name }}</p>

			<ul>
				<li>Liste des saisons</li>
				{% for season in program.seasons %}
					<li>
						<a href="{{ path("program_season_show", { program : program.id, season : season.id }) }}">
							Saison
							{{season.number}}
						</a>
						<br>
						Année de sortie :
						{{season.year}}</li>
				{% endfor %}

			</ul>

		</div>

	</div>


	<a href="{{ path('program_index') }}">

		Retour à la liste des programmes

	</a>

{% endblock %}
