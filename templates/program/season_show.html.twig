{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}

	<div class="media">

		<img class="poster align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

		<div class="media-body">

			<h1 class="mt-0">{{ program.title }}</h1>

			<p>{{ program.synopsis }}</p>

			<p>Pays:
				{{program.country}}</p>

			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>Saison
				{{ season.number }}</p>

			<p>Année :
				{{ season.year}}</p>

			<p>Description
				{{ season.description}}</p>

			<ul>
				<h5>Liste des épisodes</h5>

				{% for episode in season.episodes %}
					<li>
						<a href="{{ path("program_episode_show", { programSlug : program.slug, seasonId : season.id, episodeSlug : episode.slug }) }}">
							Episode
							{{episode.number}}:
							{{episode.title | capitalize}}
						</a>
					</li>
				{% endfor %}

			</ul>
		</div>
	</div>
	<a href="{{ path('program_index') }}">

		Retour à la liste des programmes</a>
{% endblock %}
