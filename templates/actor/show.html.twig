{% extends 'base.html.twig' %}

{% block title %}Actor
{% endblock %}

{% block body %}
	<h1>Actor</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ actor.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ actor.name }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td><img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}"></td>
			</tr>
		</tbody>
	</table>

	<strong>Series :</strong>

	<ul>

		{% for program in actor.programs %}

			<li>
				<a href="{{ path("program_show", { slug : program.slug}) }}">{{ program.title }}</a>
			</li>

		{% else %}

			<li>Aucun acteur pour cette s√©rie</li>

			<td><img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}">
			</td>
		{% endfor %}

	</ul>

	<a href="{{ path('app_actor_index') }}">back to list</a>

	<a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

	{{ include('actor/_delete_form.html.twig') }}
{% endblock %}
