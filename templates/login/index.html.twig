{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<h1 class="text-center mt-5">Connectez-vous</h1>
	<form class="d-flex flex-column align-items-center gap-3 mt-5" action="{{ path('app_login') }}" method="post">
		<label for="username">Email:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}">

		<label for="password">Password:</label>
		<input type="password" id="password" name="_password">

		<input type="hidden" name="_target_path" value="{{ path('program_index') }}">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button type="submit">login</button>
	</form>
	<div class="text-center my-3">
		<a href="{{ path('app_register') }}">Pas encore de compte?</a>
	</div>
	<div class="text-center my-3">
		<a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©?</a>
	</div>
{% endblock %}
