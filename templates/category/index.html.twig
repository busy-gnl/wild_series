{% extends 'base.html.twig' %}


{% block title %}All categories
{% endblock %}


{% block body %}

	<h1>Toutes les catérogies de la table category :
	</h1>

	{% for category in categories %}

		<div>

			<h2>Catégorie
				{{ loop.index}}:
				<a href="{{ path("category_show", { categoryName: category.name }) }}">
					{{ category.name }}</h2>
			</a>

		</div>

	{% else %}

		Aucune série trouvée.

	{% endfor %}

	<div>
		<a href="{{ path('category_new') }}">

			Ajouter une catégorie

		</a>
	</div>
	<div>
		<a href="{{ path('app_index') }}">

			Retour à l'accueil

		</a>
	</div>

{% endblock %}
