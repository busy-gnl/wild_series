{% extends 'base.html.twig' %}

{% block title %}Comment
{% endblock %}

{% block body %}
	<h1>Comment</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>Comment</th>
				<td>{{ comment.comment }}</td>
			</tr>
			<tr>
				<th>Rate</th>
				<td>{{ comment.rate }}</td>
			</tr>
			<tr>
				<th>Author</th>
				<td>{{ comment.author.email }}</td>
			</tr>
			<tr>
				<td>
					<p>{{ author.name }}
						added this comment on
						{{ comment.updatedAt|date }}</p>
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_comment_index') }}">back to list</a>

	{% if is_granted("ROLE_CONTRIBUTOR") %}

		<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>

		{{ include('comment/_delete_form.html.twig') }}

	{% endif %}

{% endblock %}
