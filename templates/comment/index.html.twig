{% extends 'base.html.twig' %}

{% block title %}Comment index
{% endblock %}

{% block body %}
	<h1>Comment index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Comment</th>
				<th>Rate</th>
				<th>Author</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.comment }}</td>
					<td>{{ comment.rate }}</td>
					<td>
						<p>{{ comment.author.email }}
							added this comment on
							{{ comment.publishedAt | date("d/m/Y") }}</p>
					</td>
					<td>
						<a href="{{ path('app_comment_show', {'id': comment.id}) }}">show</a>
						{% if is_granted("ROLE_CONTRIBUTOR") %}

							<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>
							{{ include('comment/_delete_form.html.twig') }}
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if is_granted("ROLE_CONTRIBUTOR") %}
		<a href="{{ path('app_comment_new') }}">Create new</a>
	{% endif %}
{% endblock %}
